<h2 class="mt-3">New book</h2>
      <%= form_with model: book do |f| %>
      <div class="form-group">
        <div style="margin-bottom:10px;">Title</div>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <div style="margin-bottom:10px;">Opinion</div>
        <%= f.text_area :body %>
      </div>

      <div class="form-group">
        <%= f.submit 'Create Book', class:"btn btn-success" %>
      </div>
      <% end %>
    </div>